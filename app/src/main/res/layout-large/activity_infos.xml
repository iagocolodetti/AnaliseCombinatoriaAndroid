<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_infos"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="iagocolodetti.analisecombinatoria.InfosActivity"
    android:background="#303030">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mytoolbar"
        android:title="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ToolBarStyle"
        app:popupTheme="@style/ToolBarStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:id="@+id/buttonVoltar"
            android:background="@drawable/btseta"
            android:layout_gravity="left" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerTipoInfo"
            android:layout_marginTop="30dp"
            android:background="@android:drawable/spinner_dropdown_background"
            android:textAlignment="gravity" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/permutacaosimples"
            android:id="@+id/imageViewFormula"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="40dp"
            android:scaleX="1.7"
            android:scaleY="1.7"
            android:layout_marginBottom="20dp" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/customscrollbar"
            android:fadeScrollbars="false"
            android:scrollbarSize="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewExplicacao"
                android:gravity="top|center_vertical|center_horizontal"
                android:textSize="24sp"
                android:textColor="@android:color/white" />
        </ScrollView>

    </LinearLayout>

</LinearLayout>
